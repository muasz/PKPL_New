# PierceFlow Environment Configuration
# Copy this file to .env for local development

# Database Configuration (Railway provides DATABASE_URL automatically)
DATABASE_URL=mysql://username:password@host:port/database

# WhatsApp API Configuration
WHATSAPP_PROVIDER=fonnte
FONNTE_TOKEN=your_fonnte_token_here
WABLAS_TOKEN=your_wablas_token_here
WOOWA_TOKEN=your_woowa_token_here

# Email Configuration (Optional - for backup notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=noreply@pierceflow.com
MAIL_FROM_NAME="PierceFlow Studio"

# Application Settings
APP_NAME="PierceFlow Studio"
APP_URL=https://your-app.up.railway.app
DEBUG_MODE=false

# Security Settings
SESSION_LIFETIME=7200
ADMIN_EMAIL=admin@pierceflow.com

# Production Flags
PRODUCTION_MODE=true
WHATSAPP_PRODUCTION=true
EMAIL_PRODUCTION=false